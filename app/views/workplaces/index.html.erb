<p id="notice"><%= notice %></p>

<h1>Workplaces</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Workroom</th>
      <th>Contributor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workplaces.each do |workplace| %>
      <tr>
        <td><%= workplace.code %></td>
        <td><%= workplace.name %></td>
        <td><%= workplace.workroom %></td>
        <td><%= workplace.contributor %></td>
        <td><%= link_to 'Show', workplace %></td>
        <td><%= link_to 'Edit', edit_workplace_path(workplace) %></td>
        <td><%= link_to 'Destroy', workplace, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

