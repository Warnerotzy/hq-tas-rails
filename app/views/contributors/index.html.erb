<p id="notice"><%= notice %></p>

<h1>Contributors</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>First name</th>
      <th>Surname</th>
      <th>Business unit</th>
      <th>Workplace</th>
      <th>Workroom</th>
      <th>Building</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contributors.each do |contributor| %>
      <tr>
        <td><%= contributor.code %></td>
        <td><%= contributor.first_name %></td>
        <td><%= contributor.surname %></td>
        <td><%= contributor.business_unit %></td>
        <td><%= contributor.workplace %></td>
        <td><%= contributor.workroom %></td>
        <td><%= contributor.building %></td>
        <td><%= link_to 'Show', contributor %></td>
        <td><%= link_to 'Edit', edit_contributor_path(contributor) %></td>
        <td><%= link_to 'Destroy', contributor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

